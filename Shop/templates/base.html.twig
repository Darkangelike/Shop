<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

            {{ encore_entry_link_tags('app') }}

            <link rel="stylesheet" href="https://bootswatch.com/5/yeti/bootstrap.css">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <style>
        img {
            width: 200px;
        }
    </style>
    <body>



    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path("product_index") }}">Manga Haven</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path("product_index") }}">Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </li>
                </ul>
                {% if app.user %}

                    <button class="btn btn-outline-success btn-secondary">{{ app.user.username }}</button>
                    <a href="{{ path("profile") }}">
                        <button class="btn btn-success btn-secondary">Profile</button>
                    </a>

                    <a class="ml-3" href="{{ path("cart") }}"><button type="button" class="btn btn-success">Cart ({{
                            cartservice.countProducts() }})
                        </button></a><a
                        class="ml-3" href="{{ path("signout") }}"><button type="button" class="btn btn-danger">Sign
                            out</button></a>
                {% else %}
                    <a href="{{ path("register") }}"><button type="button" class="btn btn-success">Register</button></a>
                    <a href="{{ path("signin") }}"><button type="button" class="btn btn-success">Sign in</button></a>
                {% endif %}
            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
    </body>
</html>
